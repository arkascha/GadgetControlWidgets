<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Config">

        <ToggleButton
            android:id="@+id/config_bluetooth_toggle"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Whitelist / Blacklist" />

        <TextView
            android:id="@+id/config_bluetooth_title"
            android:layout_alignParentStart="true"
            android:layout_below="@id/config_bluetooth_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonded Bluetooth Gadgets:" />

        <LinearLayout
            android:id="@+id/config_bluetooth_list"
            android:layout_alignParentStart="true"
            android:layout_below="@id/config_bluetooth_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"/>

    </RelativeLayout>

</layout>