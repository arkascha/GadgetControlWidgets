<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bluetoothWidget_itemFull_itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bluetoothWidget_itemFull_itemIcon"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/bluetoothWidget_itemFull_itemName"
        android:layout_toEndOf="@id/bluetoothWidget_itemFull_itemIcon"
        android:layout_alignTop="@id/bluetoothWidget_itemFull_itemIcon"
        android:layout_margin="4dp"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="gadget name" />

    <TextView
        android:id="@+id/bluetoothWidget_itemFull_itemClass"
        android:layout_toEndOf="@id/bluetoothWidget_itemFull_itemIcon"
        android:layout_alignBottom="@id/bluetoothWidget_itemFull_itemIcon"
        android:layout_margin="4dp"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="gadget class" />

</RelativeLayout>
